# QuickQuote Configuration Example
# Copy this file to .env and fill in your values

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_ENV=development

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=quickquote
DATABASE_PASSWORD=your-secure-password-here
DATABASE_NAME=quickquote
DATABASE_SSLMODE=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_CONNECTIONS=5
DATABASE_CONNECTION_MAX_LIFETIME=5m

# =============================================================================
# Voice Provider Configuration
# =============================================================================
# Primary provider to use (bland, vapi, retell)
VOICE_PROVIDER_PRIMARY=bland

# Bland AI Configuration
VOICE_PROVIDER_BLAND_ENABLED=true
VOICE_PROVIDER_BLAND_API_KEY=your-bland-api-key-here
VOICE_PROVIDER_BLAND_INBOUND_NUMBER=+1234567890
VOICE_PROVIDER_BLAND_WEBHOOK_SECRET=
VOICE_PROVIDER_BLAND_API_URL=https://api.bland.ai/v1

# Vapi Configuration (optional)
VOICE_PROVIDER_VAPI_ENABLED=false
VOICE_PROVIDER_VAPI_API_KEY=
VOICE_PROVIDER_VAPI_WEBHOOK_SECRET=
VOICE_PROVIDER_VAPI_API_URL=https://api.vapi.ai

# Retell Configuration (optional)
VOICE_PROVIDER_RETELL_ENABLED=false
VOICE_PROVIDER_RETELL_API_KEY=
VOICE_PROVIDER_RETELL_WEBHOOK_SECRET=
VOICE_PROVIDER_RETELL_API_URL=https://api.retellai.com

# Legacy Bland configuration (deprecated - use VOICE_PROVIDER_BLAND_* instead)
BLAND_API_KEY=your-bland-api-key-here
BLAND_INBOUND_NUMBER=+1234567890
BLAND_WEBHOOK_SECRET=
BLAND_API_URL=https://api.bland.ai/v1

# =============================================================================
# Claude AI Configuration (for quote generation)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-xxx
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# =============================================================================
# Authentication Configuration
# =============================================================================
SESSION_SECRET=generate-a-64-character-hex-string-here
SESSION_DURATION=24h

# Initial admin user (created on first startup if no users exist)
# Required for zero-config deployments
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=change-this-secure-password

# =============================================================================
# Application URLs
# =============================================================================
APP_PUBLIC_URL=http://localhost:8080

# Webhook base URL (used for voice provider callbacks)
# In production, set this to your public HTTPS URL
WEBHOOK_BASE_URL=https://your-domain.com

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# =============================================================================
# Call Settings (AI Agent Configuration)
# =============================================================================
# Business identity shown to callers
CALL_BUSINESS_NAME=QuickQuote

# Voice settings
CALL_VOICE=maya
CALL_VOICE_STABILITY=75
CALL_VOICE_SIMILARITY_BOOST=80
CALL_VOICE_STYLE=30
CALL_VOICE_SPEAKER_BOOST=true

# AI model settings
CALL_MODEL=enhanced
CALL_LANGUAGE=en-US
CALL_TEMPERATURE=60
CALL_INTERRUPTION_THRESHOLD=100

# Call behavior
CALL_WAIT_FOR_GREETING=true
CALL_NOISE_CANCELLATION=true
CALL_BACKGROUND_TRACK=office
CALL_MAX_DURATION_MINUTES=15
CALL_RECORD=true

# Quality preset: default, high_quality, fast_response, accessibility
CALL_QUALITY_PRESET=default

# Custom greeting (leave empty to use default)
CALL_CUSTOM_GREETING=

# Project types offered (comma-separated)
# Options: web_app, mobile_app, api, ecommerce, custom_software, integration
CALL_PROJECT_TYPES=web_app,mobile_app,api,ecommerce,custom_software,integration
